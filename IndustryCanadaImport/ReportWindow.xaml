<Window x:Class="IndustryCanadaImport.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndustryCanadaImport"
        mc:Ignorable="d"
        Title="Report" Height="400" Width="600" Icon="Resources/report.ico" Closing="ReportWindow_OnClosing">
    <Grid>
        <RichTextBox HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Left" IsReadOnly="True">
            <FlowDocument>
                <Paragraph Name="ReportString" TextAlignment="Center" FontFamily="Lucida Console"/>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
